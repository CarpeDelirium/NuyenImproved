  <metatypes>
    <!-- Region remove banned metaypes -->
    <metatype amendoperation="remove" xpathfilter="starts-with(name, 'A.I.')">
    </metatype>
    <metatype amendoperation="remove" xpathfilter="starts-with(name, 'Shapeshifter')">
    </metatype>
    <metatype amendoperation="remove" xpathfilter="starts-with(name, 'Pixie')">
    </metatype>
    <metatype amendoperation="remove" xpathfilter="starts-with(name, 'Pixie')">
    </metatype>
    <!-- Region remove lifestyle cost for Dwarf and Troll -->
    <metatype>
			<name>Sasquatch</name>
			<bonus>
				<lifestylecost />
			</bonus>
		</metatype>
		<metatype>
			<name>Dwarf</name>
			<bonus>
				<lifestylecost />
			</bonus>
			<metavariants>
				<metavariant>
					<name>Gnome</name>
					<bonus>
						<lifestylecost />
					</bonus>
					<qualities>
						<negative amendoperation="remove">
						  
						</negative>
					</qualities>
				</metavariant>
				<metavariant>
					<name>Hanuman</name>
					<bonus>
						<lifestylecost />
					</bonus>
				</metavariant>
				<metavariant>
					<name>Koborokuru</name>
					<bonus>
						<lifestylecost />
					</bonus>
				</metavariant>
			</metavariants>
		</metatype>
